{
    "name": "lumbermill",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prepare": "husky",
        "start": "nx serve taiga-lumbermill",
        "build": "npx nx build taiga-lumbermill",
        "start:ssr": "nx serve-ssr taiga-lumbermill",
        "build:ssr": "npx nx build taiga-lumbermill --configuration=ssr",
        "lint": "eslint .",
        "test": "nx test taiga-lumbermill",
        "cspell": "cspell --relative --dot --gitignore .",
        "typecheck": "tsc --noEmit --skipLibCheck --incremental false --tsBuildInfoFile null --project tsconfig.json",
        "prettier": "prettier !package-lock.json !taiga-ui/** . --ignore-path .gitignore",
        "format": "npm run prettier -- --write",
        "stylelint": "stylelint './apps/**/*.{less,css}' --config package.json",
        "serve:ssr:taiga-lumbermill": "node dist/apps/taiga-lumbermill/server/server.mjs"
    },
    "commitlint": {
        "extends": [
            "@taiga-ui/commitlint-config"
        ]
    },
    "lint-staged": {
        "*.less": [
            "stylelint --fix"
        ],
        "*.{js,ts,html}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{svg,yml,md,less,json}": [
            "prettier --write"
        ]
    },
    "browserslist": [
        "extends @taiga-ui/browserslist-config"
    ],
    "prettier": "@taiga-ui/prettier-config",
    "eslintConfig": {
        "extends": [
            "plugin:@taiga-ui/experience/all"
        ],
        "rules": {
            "@angular-eslint/template/prefer-control-flow": "off"
        }
    },
    "eslintIgnore": [
        "taiga-ui"
    ],
    "stylelint": {
        "extends": [
            "@taiga-ui/stylelint-config"
        ],
        "ignoreFiles": [
            "**/demo/**",
            "**/dist/**",
            "**/coverage/**",
            "**/node_modules/**"
        ]
    },
    "dependencies": {
        "@angular/animations": "19.1.6",
        "@angular/common": "19.1.6",
        "@angular/compiler": "19.1.6",
        "@angular/core": "19.1.6",
        "@angular/forms": "19.1.6",
        "@angular/platform-browser": "19.1.6",
        "@angular/platform-browser-dynamic": "19.1.6",
        "@angular/platform-server": "19.1.6",
        "@angular/router": "19.1.6",
        "@ng-web-apis/universal": "4.11.1",
        "@nx/angular": "20.4.3",
        "@taiga-ui/addon-charts": "4.24.0",
        "@taiga-ui/addon-commerce": "4.24.0",
        "@taiga-ui/addon-table": "4.24.0",
        "@taiga-ui/cdk": "4.24.0",
        "@taiga-ui/core": "4.24.0",
        "@taiga-ui/icons": "4.24.0",
        "@taiga-ui/kit": "4.24.0",
        "@taiga-ui/layout": "4.24.0",
        "@taiga-ui/legacy": "4.24.0",
        "@taiga-ui/styles": "4.24.0",
        "@taiga-ui/tsconfig": "0.251.0",
        "express": "4.21.2",
        "rxjs": "7.8.1",
        "tslib": "2.8.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "19.1.7",
        "@angular-devkit/core": "19.1.7",
        "@angular-devkit/schematics": "19.1.7",
        "@angular/cli": "19.1.7",
        "@angular/compiler-cli": "19.1.6",
        "@angular/language-service": "19.1.6",
        "@angular/ssr": "19.1.7",
        "@nx/devkit": "20.4.3",
        "@nx/jest": "20.4.3",
        "@nx/js": "20.4.3",
        "@nx/playwright": "20.4.3",
        "@nx/workspace": "20.4.3",
        "@playwright/test": "1.50.1",
        "@schematics/angular": "18.2.14",
        "@swc-node/register": "1.10.9",
        "@swc/core": "1.10.16",
        "@swc/helpers": "0.5.15",
        "@taiga-ui/browserslist-config": "0.251.0",
        "@taiga-ui/commitlint-config": "0.251.0",
        "@taiga-ui/cspell-config": "0.251.0",
        "@taiga-ui/eslint-plugin-experience": "0.249.0",
        "@taiga-ui/prettier-config": "0.251.0",
        "@taiga-ui/stylelint-config": "0.251.0",
        "@types/express": "5.0.0",
        "@types/jest": "29.5.14",
        "@types/node": "22.13.1",
        "gh-pages": "6.3.0",
        "husky": "9.1.7",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "jest-preset-angular": "14.5.1",
        "nx": "20.4.3",
        "ts-jest": "29.2.5",
        "ts-node": "10.9.2",
        "typescript": "5.7.3"
    },
    "nx": {}
}
